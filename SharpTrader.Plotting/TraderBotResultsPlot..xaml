<Window x:Class="SharpTrader.Plotting.TraderBotResultsPlot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpTrader.Plotting"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="TraderBotResultsPlot" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" MinHeight="20" Orientation="Vertical">
            <Label Content="{Binding BiasSign}" ContentStringFormat="Bias: {0}"></Label>
            <Label Content="{Binding CurrentPositionString}" ContentStringFormat="Current Position {0}"></Label>
        </StackPanel>
        <oxy:PlotView Grid.Row="1"  HorizontalAlignment="Stretch" Model="{Binding PlotViewModel}" />

    </Grid>
</Window>
